<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patientbgggggg"
    android:fitsSystemWindows="true"
    tools:context=".patientLog">


    <TextView
        android:id="@+id/textView"
        android:layout_width="224dp"
        android:layout_height="44dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:text="DashBoard"

        android:textColor="#0B0B0B"
        android:textSize="28dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/searchPersonName"

        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="-58dp"
        android:ems="10"
        android:hint="Enter your adharcard no."
        android:inputType="textPersonName"
        android:paddingLeft="40dp"
        android:textColorHint="#090808" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchPersonName"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="-54dp"
        android:text="Search"
        android:textSize="16sp" />
</RelativeLayout>